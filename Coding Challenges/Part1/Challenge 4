// using if-else

const bill = 275;
if(bill >= 50 && bill <=300){
    tip = 0.15 * bill;
} else {
    tip = 0.20 * bill;
}
console.log(`The bill was ${bill}, the tip was ${tip}, and the total value ${bill + tip}`);

//using ternary 
const bill = 275;
const tip = bill >= 50 && bill <=300 ? 0.15 * bill : 0.20 * bill ;
console.log(`The bill was ${bill}, the tip was ${tip}, and the total value ${bill + tip}`);

